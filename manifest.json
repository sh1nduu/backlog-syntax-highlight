{
  "manifest_version": 2,
  "name": "Backlog Syntax Highlight",
  "description": "",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["http://*.backlog.jp/*", "https://*.backlog.jp/*" ],
    "js": ["content_scripts.js", "highlight/highlight.pack.js"],
    "css": ["content_scripts.css", "highlight/styles/github.css"]
  }],
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ]
}

